{% extends "app.twig" %}

{% block content %}
    <header class="page-header">
        <h1 id="tables">Synchronizations</h1>
    </header>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Status</th>
                <th>Mirror</th>
                <th>Started On</th>
                <th>Duration</th>
            </tr>
        </thead>
        <tbody>
        {% for item in syncs %}
            <tr id="id-{{ item.id }}">
                <td>
                    #{{ item.id }}
                </td>
                <td>
                    {% if item.wasSuccessful %}
                        <span class="status status-success">
                            <i>✅</i>
                        </span>
                    {% else %}
                        <span class="status status-failure">
                            <i>⨯</i>
                        </span>
                    {% endif %}
                </td>
                <td>
                    {% if item.mirror %}
                        {{ item.mirror.name }}
                    {% else %}
                        <code class="repo-src">{{ item.sourceUrl }}</code>
                        <br> → <br>
                        <code class="repo-src">{{ item.targetUrl }}</code>
                    {% endif %}
                </td>
                <td>{{ item.startedOn | calendar }}</td>
                <td>{{ item.duration | duration }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
