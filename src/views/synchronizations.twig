{% extends "app.twig" %}

{% block content %}
    <header class="page-header">
        <h1 id="tables">Synchronizations</h1>
    </header>

    <div class="error-container clearfix hidden" id="error-container">
        <pre id="error-target"></pre>
        <div class="form-actions pull-right">
            <button class="btn btn-default" type="button" data-purpose="hide-error">Close</button>
        </div>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Status</th>
                <th>Mirror</th>
                <th>Started On</th>
                <th>Duration</th>
                <th>Errors</th>
            </tr>
        </thead>
        <tbody>
        {% for item in syncs %}
            <tr id="id-{{ item.id }}">
                <td>
                    #{{ item.id }}
                </td>
                <td>
                    {% if item.wasSuccessful %}
                        <span class="status status-success">
                            <i>✅</i>
                        </span>
                    {% else %}
                        <span class="status status-failure">
                            <i>⨯</i>
                        </span>
                    {% endif %}
                </td>
                <td>
                    {% if item.mirror %}
                        {{ item.mirror.name }}
                    {% else %}
                        <code class="repo-src">{{ item.sourceUrl }}</code>
                        <br> → <br>
                        <code class="repo-src">{{ item.targetUrl }}</code>
                    {% endif %}
                </td>
                <td>{{ item.startedOn | calendar }}</td>
                <td>{{ item.duration | duration }}</td>
                <td>
                    {% if not item.wasSuccessful %}
                        <div class="hidden" id="item-{{ item.id }}-error">{{ item.error }}</div>
                        <button type="button" class="btn btn-danger btn-xs" data-purpose="show-error" data-id="{{ item.id }}">
                            Show Errors
                        </button>
                    {% else %}
                        None
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <script src="/static/js/sync.js"></script>
{% endblock %}
