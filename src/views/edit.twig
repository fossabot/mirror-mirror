{% extends "app.twig" %}

{% block content %}
    <header class="page-header">
        <h1>Edit {{ description.singleName }}</h1>
    </header>

    <div class="row">
        <div class="col-md-6">
            <div class="well">
                <form class="form clearfix" method="post" action="{{ req.url }}">
                    {{ form|raw }}

                    <div class="form-actions">
                        <div class="btn-toolbar pull-right">
                            <button type="submit" class="btn btn-primary">
                                Save {{ description.singleName }}
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
